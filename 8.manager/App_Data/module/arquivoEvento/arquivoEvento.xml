            INNER JOIN dbo.evento_Idioma NI ON NI.eventoId = N.eventoId
            INNER JOIN categoria C ON C.categoriaId = N.categoriaId 
            WHERE idiomaId = {IDIOMA_ID}" >
      </query>-->

			<!--Exemplo sem multi linguagem-->
			<!--<query section="list" sql="
            SELECT N.*, C.descricao FROM evento N
            INNER JOIN categoria C ON C.categoriaId = N.categoriaId 
      " />-->

			<!--<query section="export" sql="SELECT eventoId as 'Código da Evento', titulo as 'Título da Evento' FROM evento" />-->
		</queries>

		<!--INFORME AQUI O USERCONTROL (.ASCX) QUE VOCÊ DESEJA QUE A PÁGINA DE EDIÇÃO CARREGUE-->
		<!--<forms>
      <edit type="control" src="evento.ascx" />
    </forms>-->

		<!--OPÇÕES PARA NOVAS FUNCIONALIDADES-->
		<!--<options>
      <option querySection="export" value="excel" name="Exportar (Excel)" />
      <option querySection="export" value="csv" name="Exportar (CSV)" />
    </options>-->


		<!-- CONFIGURACAO DOS CAMPOS QUE COMPOE UM MODULO -->
		<fields>


			<!--
      TEXTBOX
      Adicionar o atrubuto (inputMask) caso queira aplicar uma mascara ao textbox
      Tipo aceitos:
      cpf
      cnpj
      rg
      cep
      data
      hora
      ddd
      telefone
      moeda
      numero
      -->

			<UploadFile
			  name="nomeArquivo"
			  dataFieldName="nomeArquivo"
			  translation="false"
			  label="Arquivo"
			  runat="server"
			  allowedExtensions="*.*"
			  targetFolder="evento/galeria/"
			  showInList="true"
			  maxFileLength="1024" />

			<TextBox
			  name="tamanho"
			  label="Tamanho"
			  required="true"
			  sort="true"
			  dataFieldName="tamanho"
			  width="50"
			  showInList="false"
			  maxlength="10"
			  translation="false"
      />


			<TextBox
			  name="extensao"
			  label="Extensão"
			  required="true"
			  sort="true"
			  dataFieldName="extensao"
			  width="50"
			  showInList="true"
			  maxlength="10"
			  translation="false"
      />

		</fields>

		<!--FILTROS-->
		<filters>
			<filter label="Título" field="nomeArquivo" />

			<!--
      DATE
      Para fazer filtro por período insira a propriedade (filterType="range")
      Ex: <filter label="Data" filterType="range" field="data" />
      -->

		</filters>

