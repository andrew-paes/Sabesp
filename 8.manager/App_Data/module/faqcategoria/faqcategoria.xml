    <!-- CONFIGURACAO DOS CAMPOS QUE COMPOE UM MODULO -->
    <fields>


      <!--
      TEXTBOX
      Adicionar o atrubuto (inputMask) caso queira aplicar uma mascara ao textbox
      Tipo aceitos:
      cpf
      cnpj
      rg
      cep
      data
      hora
      ddd
      telefone
      moeda
      numero
      -->
      <TextBox
        name="nomecategoria"
        label="Categoria"
        required="true"
        sort="true"
        dataFieldName="nomecategoria"
        width="300"
        showInList="true"
        maxlength="100"
        translation="true"
      />

      <TextBox
        name="ordemcategoria"
        label="Ordem"
        required="true"
        sort="true"
        dataFieldName="ordemcategoria"
        width="300"
        showInList="true"
        maxlength="50"
        translation="false"
      />
      
    </fields>

    <!--FILTROS-->
    <filters>
      <filter label="Título" field="nomecategoria" />

      <!--
      DATE
      Para fazer filtro por período insira a propriedade (filterType="range")
      Ex: <filter label="Data" filterType="range" field="data" />
      -->

    </filters>

