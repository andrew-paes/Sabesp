<?xml version="1.0" encoding="utf-8" ?>
<AG2Manager version="1.0">
	<module name="formularioVideoteca" version="1.0">
		<!--Habilita o multi idioma para o módulo-->
		<settings>
			<title><![CDATA[Visualização Formulário de Videoteca]]></title>
			<description><![CDATA[Visualização Formulário de Videoteca]]></description>
			<setting name="multiLanguage"  value="false" />
			<setting name="controlVersion"  value="false" />
			<setting name="paging" value="true" />
			<setting name="pageSize" value="20" />
			<setting name="workflow" value="false" />
		</settings>

		<!-- Configuracao da tabela que recebe os dados -->
		<table name="FormularioVideoteca" primaryKey="formularioVideotecaId" />

		<queries>

			<!--Exemplo com multi linguagem-->
			<query section="list" type="StoredProcedure" sql="FormularioVideotecaCarregar" >
			</query>

			<query section="edit" type="StoredProcedure" sql="FormularioVideotecaCarregar" >
			</query>

		</queries>

		<!-- CONFIGURACAO DOS CAMPOS QUE COMPOE UM MODULO -->
		<fields>

			<Date
				name="dataHoraContato"
				label="Data Contato"
				dbType="Date"
				dataFieldName="dataHoraContato"
				required="true"
				sort="true"
				showInList="true"
				translation="false"
			/>

			<ListBox
				name="estadoId"
				label="Estado"
				dataFieldName="estadoId"
				showInList="true"
				inListUseField="Estado_nomeEstado"
				required="false"
				dataSource="PROC:EstadoCarregar"
				dataTextField="nomeEstado"
				dataValueField="estadoId"
			/>

			<TextBox
				name="cidade"
				label="Cidade"
				required="true"
				sort="true"
				dataFieldName="cidade"
				width="150"
				showInList="false"
				maxlength="50"
				translation="false"
				/>

			<TextBox
				name="empresa"
				label="Empresa"
				required="true"
				sort="true"
				dataFieldName="empresa"
				width="150"
				showInList="true"
				maxlength="50"
				translation="false"
				/>

			<TextBox
				name="rg"
				label="RG"
				required="true"
				sort="true"
				dataFieldName="rg"
				width="150"
				showInList="false"
				maxlength="50"
				translation="false"
				/>

			<TextBox
				name="cadastroNacionalPessoa"
				label="Cadastro Nacional Pessoa"
				required="true"
				sort="true"
				dataFieldName="cadastroNacionalPessoa"
				width="150"
				showInList="false"
				maxlength="50"
				translation="false"
				/>

			<TextBox
				name="nome"
				label="Nome"
				required="true"
				sort="true"
				dataFieldName="nome"
				width="300"
				showInList="true"
				maxlength="50"
				translation="false"
				/>

			<TextBox
				name="email"
				label="E-mail"
				required="true"
				sort="true"
				dataFieldName="email"
				width="300"
				showInList="true"
				maxlength="50"
				translation="false"
				/>

			<TextBox
				name="cep"
				label="CEP"
				required="true"
				sort="true"
				dataFieldName="cep"
				width="50"
				showInList="false"
				maxlength="50"
				translation="false"
				/>

			<TextBox
				name="endereco"
				label="Endereço"
				required="true"
				sort="true"
				dataFieldName="endereco"
				width="300"
				showInList="false"
				maxlength="50"
				translation="false"
				/>

			<TextBox
				name="bairro"
				label="Bairro"
				required="true"
				sort="true"
				dataFieldName="bairro"
				width="300"
				showInList="false"
				maxlength="50"
				translation="false"
				/>

			<TextBox
				name="telefoneDDD"
				label="DDD"
				required="true"
				sort="true"
				dataFieldName="telefoneDDD"
				width="20"
				showInList="false"
				maxlength="50"
				translation="false"
				/>

			<TextBox
				name="telefoneNumero"
				label="DDD"
				required="true"
				sort="true"
				dataFieldName="telefoneNumero"
				width="50"
				showInList="false"
				maxlength="50"
				translation="false"
				/>

			<CheckBox
				name="interesseGotaBorralheira"
				label="Interesse em 'A Gota Borralheira'"
				translation="false"
				dataFieldName="interesseGotaBorralheira"
				sort="true"
				showInList="false"
				/>

			<CheckBox
				name="interesseAguaNaBoca"
				label="Interesse em 'Água na Boca'"
				translation="false"
				dataFieldName="interesseAguaNaBoca"
				sort="true"
				showInList="false"
				/>

			<CheckBox
				name="interesseAguaVideos"
				label="Interesse em 'Água 4 Vídeos'"
				translation="false"
				dataFieldName="interesseAguaVideos"
				sort="true"
				showInList="false"
				/>

			<CheckBox
				name="interesseChuaChuagua"
				label="Interesse em 'Chuá Chuágua'"
				translation="false"
				dataFieldName="interesseChuaChuagua"
				sort="true"
				showInList="false"
				/>

			<CheckBox
				name="interesseTratamento"
				label="Interesse em 'Tratamento de Água e Esgoto'"
				translation="false"
				dataFieldName="interesseTratamento"
				sort="true"
				showInList="false"
				/>

			<CheckBox
				name="interesseSuperH20"
				label="Interesse em 'Super H2O'"
				translation="false"
				dataFieldName="interesseSuperH20"
				sort="true"
				showInList="false"
				/>

			<HtmlTextBox
				label="Utilização"
				name="utilizacaoMaterial"
				dataFieldName="utilizacaoMaterial"
				inListUseField="utilizacaoMaterial"
				showInList="false"
				required="false"
				translation="false"
			/>

		</fields>

		<!--FILTROS-->
		<filters>
			<filter label="Data" field="dataHoraContato" filterType="range" />
			<filter label="RG" field="rg" />
			<filter label="Cadastro Nacional Pessoa" field="cadastroNacionalPessoa" />
			<filter label="Nome" field="nome" />
			<filter label="E-mail" field="email" />
			<filter label="Empresa" field="empresa" />
			<filter label="Cidade" field="cidade" />
			<filter label="Estado" field="estadoId" filterExpression="Estado_estadoId=" />
			<!--<filter label="Data" field="dataHoraContato" filterType="range"  />-->
		</filters>

	</module>

</AG2Manager>